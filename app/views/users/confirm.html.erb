<div class="Confirmation">
  <h1>Sign Up Confirmation</h1>
  <h2>Are you sure these values are correct?</h2>
  <br>
  <h3><%="Email: #{@user.email}"%></h3>
  <h3><%="Name: #{@user.name}"%></h3>
</div>

<div class="button1">
  <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success btn-lg' %>
</div>
  
<div class="button2">
  <%= link_to "No", new_user_path, class: 'btn btn-default btn-lg' %>
</div>